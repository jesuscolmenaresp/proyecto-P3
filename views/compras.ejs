<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Interfaz Administrativa - Compras y Clientes</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
</head>
<body>
  <a href="/login" class="btn btn-primary">Volver al men√∫</a>
  <h1>Interfaz Administrativa - Compras y Clientes</h1>
  <div class="navbar">
  <h2>Clientes:</h2>
  <ul>
    <% clients.forEach(client => { %>
      <li><%= client.email %></li>
    <% }); %>
  </ul>
</div>
  <!-- Mostrar lista de compras -->
  <h2>Compras:</h2>
  <table>
    <thead>
      <tr>
        <th>ID Cliente</th>
        <th>ID Producto</th>
        <th>Cantidad</th>
        <th>Total Pagado</th>
        <th>Fecha</th>
      </tr>
    </thead>
    <tbody>
      <% purchases.forEach(purchase => { %>
        <tr>
          <td><%= purchase.client_id %></td>
          <td><%= purchase.product_id %></td>
          <td><%= purchase.quantity %></td>
          <td><%= purchase.total_paid %></td>
          <td><%= purchase.fecha %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
